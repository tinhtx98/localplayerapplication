<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Application Theme (Light - Android 12+) -->
    <style name="Base.Theme.LocalPlayerApplication" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/on_background</item>
        <item name="android:textColorSecondary">@color/on_surface_variant</item>

        <!-- Status bar styling -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar styling -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window flags -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    
    <!-- Main Application Theme -->
    <style name="Theme.LocalPlayerApplication" parent="Base.Theme.LocalPlayerApplication" />

</resources>
