<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base Application Theme (Dark - Android 12+) -->
    <style name="Base.Theme.LocalPlayerApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material You dark colors -->
        <item name="android:colorPrimary">@android:color/system_accent1_200</item>
        <item name="android:colorPrimaryContainer">@android:color/system_accent1_700</item>
        <item name="android:colorSecondary">@android:color/system_accent2_200</item>
        <item name="android:colorSecondaryContainer">@android:color/system_accent2_700</item>
        <item name="android:colorTertiary">@android:color/system_accent3_200</item>
        <item name="android:colorTertiaryContainer">@android:color/system_accent3_700</item>
        
        <!-- Dark surface colors -->
        <item name="android:colorSurface">@android:color/system_neutral1_900</item>
        <item name="android:colorSurfaceVariant">@android:color/system_neutral2_800</item>
        <item name="android:colorBackground">@android:color/system_neutral1_1000</item>
        
        <!-- Enhanced splash screen -->
        <item name="android:windowSplashScreenBackground">@android:color/system_accent1_200</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_music_note</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/system_accent1_700</item>
        
        <!-- Status bar styling -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar styling -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window insets handling -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        
        <!-- Blur effects -->
        <item name="android:windowBackgroundBlurRadius" tools:targetApi="s">20dp</item>
        <item name="android:windowBlurBehindEnabled" tools:targetApi="s">true</item>
    </style>
    
    <!-- Main Application Theme (Dark - Android 12+) -->
    <style name="Theme.LocalPlayerApplication" parent="Base.Theme.LocalPlayerApplication">
        <!-- Material You dark color tokens -->
        <item name="colorPrimary">@android:color/system_accent1_200</item>
        <item name="colorOnPrimary">@android:color/system_accent1_800</item>
        <item name="colorPrimaryContainer">@android:color/system_accent1_700</item>
        <item name="colorOnPrimaryContainer">@android:color/system_accent1_100</item>
        
        <item name="colorSecondary">@android:color/system_accent2_200</item>
        <item name="colorOnSecondary">@android:color/system_accent2_800</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_700</item>
        <item name="colorOnSecondaryContainer">@android:color/system_accent2_100</item>
        
        <item name="colorTertiary">@android:color/system_accent3_200</item>
        <item name="colorOnTertiary">@android:color/system_accent3_800</item>
        <item name="colorTertiaryContainer">@android:color/system_accent3_700</item>
        <item name="colorOnTertiaryContainer">@android:color/system_accent3_100</item>
        
        <!-- Dark surface colors -->
        <item name="colorSurface">@android:color/system_neutral1_900</item>
        <item name="colorOnSurface">@android:color/system_neutral1_100</item>
        <item name="colorSurfaceVariant">@android:color/system_neutral2_800</item>
        <item name="colorOnSurfaceVariant">@android:color/system_neutral2_200</item>
        
        <!-- Dark background colors -->
        <item name="android:colorBackground">@android:color/system_neutral1_1000</item>
        <item name="colorOnBackground">@android:color/system_neutral1_100</item>
        
        <!-- Error colors -->
        <item name="colorError">@android:color/system_error_200</item>
        <item name="colorOnError">@android:color/system_error_800</item>
        <item name="colorErrorContainer">@android:color/system_error_700</item>
        <item name="colorOnErrorContainer">@android:color/system_error_100</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@android:color/system_neutral_variant_400</item>
        <item name="colorOutlineVariant">@android:color/system_neutral_variant_700</item>
    </style>
    
</resources>
